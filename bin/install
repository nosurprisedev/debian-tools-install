#!/bin/bash

set -eo pipefail

PACKAGE1=$1

echo '---------------------------------'
echo "sudo apt-get install -y $PACKAGE1"
echo '---------------------------------'
sudo apt-get install -y $PACKAGE1

wait
echo ''
echo '------------------------------'
echo "dpkg -s $PACKAGE1 | 'Version:'"
dpkg -s "$PACKAGE1" | 'Version:'
